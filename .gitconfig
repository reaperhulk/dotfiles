[user]
    email = paul.l.kehrer@gmail.com
    name = Paul Kehrer
[apply]
#	whitespace = fix
[core]
	excludesfile = ~/.gitignore
	attributesfile = ~/.gitattributes
#	whitespace = fix,space-before-tab,tab-in-indent,trailing-space
[color]
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[merge]
	log = true
[url "git@github.com:"]
	insteadOf = "gh:"
	pushInsteadOf = "github:"
	pushInsteadOf = "git://github.com/"
[url "git://github.com/"]
	insteadOf = "github:"
[url "git@gist.github.com:"]
	insteadOf = "gst:"
	pushInsteadOf = "gist:"
	pushInsteadOf = "git://gist.github.com/"
[url "git://gist.github.com/"]
	insteadOf = "gist:"
[alias]
    hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
    fix = commit --amend
    #fix example (used when you forgot something small in your last commit)
    #git fix FILE1 FILE2     # Add changes to FILE1 and FILE2 to top commit
    #git fix -a              # Add all changes in working copy to top commit
    st = status
    ci = commit
    pom = push origin master
